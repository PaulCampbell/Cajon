<p id="notice"><%= notice %></p>
<section class="largeSection span-15">
<h1>
<%= gravatar_for @user, :size => 30 %>
<%= @user.name %></h1>
<p>
	<%= @user.description %>
</p>
<% unless @user.posts.empty? %>	

	<%= render @posts %>

<%= will_paginate @posts %>
<% end %>
</section>

<aside class="span-7 last">
	<% if !@user.twitter_name.nil? %>
		<div id="twitter">
		
		</div>
	<% end %>
<aside>
	<script src="/javascripts/jquery.twitter.js" type="text/javascript"></script>
	<script type="text/javascript"> 
				$(document).ready(function() {
					$("#twitter").getTwitter({
						userName: "slarty_bartfast",
						numTweets: 5,
						loaderText: "Loading tweets...",
						slideIn: true,
						slideDuration: 750,
						showHeading: true,
						headingText: "Latest Tweets",
						showProfileLink: true,
						showTimestamp: true
					});
				});
			</script>


