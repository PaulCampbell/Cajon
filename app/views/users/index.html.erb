<section class="container paddingbottom standardpadding">
<div class="largeSection span-15">
		<div class="columnSpacer">
			<h1>Decorated World Blog</h1>
			<p>
				This is the <strong>Decorated World</strong> weblog. Our place to talk
				about design, development, business and other cool things we spot along the way. 
				Have a read and get involved in the conversation.
			</p>
	<% unless @posts.empty? %>	

		<%= render @posts %>
<%= will_paginate @posts, :param_name => 'posts_page' %>
	<% end %>
	</div>
</div>

<aside class="span-9 last">
<h1>Blog roll</h1>

<ul class="users clear">
  <% @users.each do |user| %>
    <%= render user %>
  <% end %>
</ul>
<%= will_paginate @users, :param_name => 'users_page' %>
</aside>
</section>