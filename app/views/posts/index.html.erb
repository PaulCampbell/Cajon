<h1>Listing posts</h1>

<%= will_paginate @posts %>
<table>

<% @posts.each do |post| %>
  <tr>

    <td><%= link_to post.title, post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td
	<td><%= link_to 'Publish'%></td>
  </tr>
<% end %>
</table>
<%= will_paginate @posts %>
<br />

<%= link_to 'New Post', new_post_path %>
