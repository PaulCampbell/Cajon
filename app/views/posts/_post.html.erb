
	<article>
		<% if !current_user.nil? %>
	<% if current_user == post.user %>
		<%= link_to "", {:controller => "posts", :action => "edit", :id => post }, :class=> "editLink", :title => "Edit post" %>
	<% end  %>
		<% end %>
		
		<h1><%= link_to post.title, post_path(post) %></h1>
		<span class="nobreak"><span class="postuser"><%= post.user.name %></span> <time><%= format_date_short(post.created_at) %></time></span>
		<div class="commentsummary">
			<%= link_to post.postcomments.length.to_s + " comments",  post_path(post) + "#comments"%> <% if post.postcomments.any?%><span>latest by <%= post.postcomments.last.name %></span><% end %>
		</div>
		<div class="postcontent"><%=raw post.content %></div>
	</article>
